{
  "manifest_version": 3,
  "name": "Directory Brute Forcer",
  "version": "1.0",
  "description": "A tool to brute-force directories or parameters.",
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["wordlists/*"],
      "matches": ["<all_urls>"]
    }
  ]
}